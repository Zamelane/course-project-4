<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Src.Controls.Select">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame BorderColor="{StaticResource Gray60}" Padding="5" CornerRadius="0">
                <Grid ColumnDefinitions="*, auto" Padding="18,13">
                    <Label Text="Popular" FontAttributes="Bold" FontSize="16" TextColor="{StaticResource Gray500}" VerticalOptions="Center"/>
                    <Image Source="caret_down.png" WidthRequest="16" HeightRequest="16" VerticalOptions="Center" Grid.Column="1"/>
                </Grid>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>