<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Src.Controls.CustomRefreshView">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <RefreshView Command="{TemplateBinding Command}" IsRefreshing="{TemplateBinding Command.IsRunning}">
                <ScrollView>
                    <ContentPresenter/>
                </ScrollView>
            </RefreshView>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>