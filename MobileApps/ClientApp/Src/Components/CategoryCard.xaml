<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Src.Components.CategoryCard">

    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame CornerRadius="4" BorderColor="Transparent" Padding="{StaticResource MarginSmall}" WidthRequest="179" BackgroundColor="{TemplateBinding CardColor}">
                <VerticalStackLayout Spacing="16">
                    <Image Source="{TemplateBinding IconSource}" HorizontalOptions="Start" WidthRequest="24" HeightRequest="24"/>
                    <Label Text="{TemplateBinding Text}" FontSize="14" FontFamily="Nunito"/>
                </VerticalStackLayout>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
    
</ContentView>