<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ClientApp.Src.Controls"
             xmlns:vm="clr-namespace:ClientApp.Src.ViewModels"
             x:Class="ClientApp.Src.Views.CommentsPage"
             BackgroundColor="Transparent"
             Title="CommentsPage">

    <ContentPage.BindingContext>
        <vm:CommentsViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Rectangle BackgroundColor="{StaticResource Black}"
                   WidthRequest="200"
                   StrokeThickness="0"
                   Opacity="0.3"/>
        <Border Margin="0,100,0,0"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0"/>
            </Border.StrokeShape>
            <Grid BackgroundColor="{StaticResource White}"
                  RowDefinitions="auto, auto, *, auto">

                <Label Text="Комментарии"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Margin="10" />

                <Label VerticalOptions="FillAndExpand"
                       HeightRequest="1"
                       BackgroundColor="{StaticResource Gray100}"
                       Opacity="0.7"
                       Grid.Row="1" />

                <CollectionView Grid.Row="2"
                                ItemsSource="{Binding Comments}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="auto, *"
                                  RowDefinitions="auto,auto">
                                
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid Grid.Row="3"
                      Padding="5"
                      ColumnDefinitions="*, auto"
                      ColumnSpacing="5">
                    <controls:IconEntry IconSource="comment_icon.png" />
                    <controls:Button Grid.Column="1"
                                     WidthRequest="55"
                                     HeightRequest="55"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
    
</ContentPage>